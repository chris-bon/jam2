<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" 
              data-toggle="collapse" 
              data-target="#bs-example-navbar-collapse-1" 
              aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "JamCircle", root_path, class: "navbar-brand" %>
    </div>

    <!-- Nav Links -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active">
          <%= link_to root_path do %>Link
            <span class="sr-only">(current)</span>
          <% end %>
        </li>
        <li><%= link_to "Link Name", root_path %></li>

        <!-- Dropdown Menu -->
        <li class="dropdown">
          <%= link_to root_path, class: "dropdown-toggle", role: "button",
                      data: { toggle: "dropdown" },
                      aria: { haspopup: true, expanded: false } do %>Dropdown 
            <span class="caret"></span>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to "A link", "/" %></li>
            <li><%= link_to "Another link", "/" %></li>
            <li><%= link_to "Yet another link", "/" %></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to "A separated link", "/" %></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to "Another separated link", "/" %></li>
          </ul>
        </li> 
      </ul>

      <!-- Search Bar -->
      <%= form_tag "/", class: "navbar-form navbar-left", method: "get" do %>
        <div class="form-group">
          <%= search_field_tag "search", nil, class: "form-control", 
                                        placeholder: "Search musicians" %>
        </div>
        <%= submit_tag "Submit", class: "btn btn-default" %>
      <% end %>

      <!-- User Sign-Up/In/Out -->
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <%= link_to root_path, class: "dropdown-toggle", role: "button",
                        data: { toggle: "dropdown" },
                        aria: { haspopup: true, expanded: false } do %>
              <%= current_user.username %> <span class="caret"></span>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", "/profiles/#{current_user.id}" %></li>
              <li><%= link_to "Settings", "/settings" %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, 
                              method: "delete" %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign In",  new_user_session_path %></li>
          <li><%= link_to "Register", new_user_registration_path %></li>
        <% end %>
      </ul> 
    </div>
  </div>
</nav>